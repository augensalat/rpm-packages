#!/bin/sh
#
# check if we are started as root
# only one of UID and USER must be set correctly
#
if test "$UID" != 0 -a "$USER" != root; then
    echo "You must be root to start $0."
    exit 1
fi

#
# check for /etc/sysconfig/lighttpd
#
test -f /etc/sysconfig/lighttpd || {
    echo "No /etc/sysconfig/lighttpd found."
    exit 1
}
. /etc/sysconfig/lighttpd

test "$ENABLE_AUTOCONFIG_LIGHTTPD" = yes || exit 0

#
# set lighttpd config dirs
#
LIGHTTPDENV="/etc/lighttpd/env"

#
# define preamble of config files
#
PREAMBLE="#
#
# Automatically generated on `env LANG=C date`
#
# PLEASE DO NOT EDIT THIS FILE
#
# Instead edit /etc/sysconfig/lighttpd and restart the server.
#
#"

umask 022

test -z "$LIGHTTPD_LOGUSER" && \
    echo -n >$LIGHTTPDENV/LOGUSER || \
    cat >$LIGHTTPDENV/LOGUSER <<ETX
$LIGHTTPD_LOGUSER
#
# The name of the user under which multilog is running.
$PREAMBLE
ETX

size="`echo $LIGHTTPD_LOGSIZE | sed -e 's/[^0-9]//g'`"
test -z "$size" -o "$size" -lt 4096 && \
    echo -n >$LIGHTTPDENV/LOGSIZE || \
    cat >$LIGHTTPDENV/LOGSIZE <<ETX
$size
# sets the maximum file size for subsequent dir actions. multilog will
# decide that current is big enough if current has size bytes. (multilog
# will also decide that current is big enough if it sees a newline within
# 2000 bytes of the maximum file size; it tries to finish log files at line
# boundaries.) size must be between 4096 and 16777215.
$PREAMBLE
ETX

num="`echo $LIGHTTPD_LOGNUM | sed -e 's/[^0-9]//g'`"
test -z "$num" -o "$num" -lt 2 && \
    echo -n >$LIGHTTPDENV/LOGNUM || \
    cat >$LIGHTTPDENV/LOGNUM <<ETX
$num
# sets the number of log files for subsequent dir actions. After renaming
# current, if multilog sees num or more old log files, it removes the old
# log file with the smallest timestamp. num must be at least 2.
$PREAMBLE
ETX

